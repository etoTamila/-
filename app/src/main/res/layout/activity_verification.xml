<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verification">
    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textSize="24sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="155dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the 6 digit numbers sent to your email"
        android:textSize="14sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:id="@+id/kod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginHorizontal="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
            android:id="@+id/t1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:maxLength="1"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:background="@drawable/verification"
            android:layout_marginEnd="30dp"/>
        <EditText
            android:id="@+id/t2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:background="@drawable/verification"
            android:layout_marginEnd="30dp"/>
        <EditText
            android:id="@+id/t3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:background="@drawable/verification"
            android:layout_marginEnd="30dp"/>
        <EditText
            android:id="@+id/t4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:background="@drawable/verification"
            android:layout_marginEnd="30dp"/>
        <EditText
            android:id="@+id/t5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center_horizontal"
            android:background="@drawable/verification"
            android:layout_marginEnd="30dp"/>
        <EditText
        android:id="@+id/t6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center_horizontal"
        android:background="@drawable/verification" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kod">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="If you didnâ€™t receive code, "
            android:textSize="14sp"
            android:textColor="@color/gray"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text=" resend after 1:00"
            android:textColor="@color/gray"
            android:textSize="14sp"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Send"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="85dp"
        android:text="Set New Password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear" />
</androidx.constraintlayout.widget.ConstraintLayout>